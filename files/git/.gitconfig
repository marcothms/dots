[user]
	name = Marco Thomas
	email = github@marcothms.de
[includeIf "gitdir:~/dev/lrz-gitlab/**"]
	path = "~/dev/lrz-gitlab/.gitconfig"
[alias]
	a = add
	aa = add .
	b = branch
	bl = blame
	c = commit -v
	ca = commit -v --amend
	cm = commit -v -m
	co = checkout
	cp = cherry-pick
	d = diff
	nuke = clean -df
	lg = log --oneline --decorate --graph
	lgp = lg -p
	pl = pull --rebase
	ps = push
	r = rebase
	rh = reset HEAD
	sh = show
	st = status -s
	wt = worktree
[blame]
	date = relative
[grep]
	lineNumber = true
[init]
	defaultBranch = main
